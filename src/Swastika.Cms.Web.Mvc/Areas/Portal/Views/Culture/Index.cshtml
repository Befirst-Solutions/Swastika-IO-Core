                    </div>
                    <!-- /.btn-group -->
                </div>
            *@
        </div>
    </div>

    <table class="table table-sm table-hover dataTable" cellspacing="0">
        <thead class="thead-light">
            <tr>
                <th scope="col" width="5%">
                    Icon
                </th>
                <th scope="col" width="10%">
                    Specificulture
                </th>
                <th scope="col">
                    Lcid
                </th>
                <th scope="col">
                    Alias
                </th>
                <th scope="col">
                    FullName
                </th>
                <th scope="col">
                    Description
                </th>

                <th scope="col" width="5%" class="text-right">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        <i class="flag-icon @item.Icon" style="font-size: x-large;"></i>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specificulture)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lcid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alias)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        <small>
                            @Html.DisplayFor(modelItem => item.Description)
                        </small>
                    </td>

                    <td>
                        <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light"> <span class="oi oi-pencil text-primary"></span></a>
